    "prisma": "^4.1.0",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/micro-orm/mikro-orm.config.ts",
      "./dist/config/micro-orm/mikro-orm.config.js"
    ]
  }
